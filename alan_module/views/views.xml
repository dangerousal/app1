<odoo>
  <data>
    <!-- explicit list view definition -->
    
    <record model="ir.ui.view" id="alan_module.list">
      <field name="name">alan_module list</field>
      <field name="model">alan_module.alan_module</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>
   

    <!-- actions opening views on models -->
    
    <record model="ir.actions.act_window" id="alan_module.action_window">
      <field name="name">alan_module window</field>
      <field name="res_model">alan_module.alan_module</field>
      <field name="view_mode">tree,form</field>
    </record>
   

    <!-- server action to the one above -->
   
    <record model="ir.actions.server" id="alan_module.action_server">
      <field name="name">alan_module server</field>
      <field name="model_id" ref="model_alan_module_alan_module"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
    </record>
   

    <!-- Top menu item -->
  
    <menuitem name="alan_module" id="alan_module.menu_root"/>
    -->
    <!-- menu categories -->
   
    <menuitem name="Menu 1" id="alan_module.menu_1" parent="alan_module.menu_root"/>
    <menuitem name="Menu 2" id="alan_module.menu_2" parent="alan_module.menu_root"/>
    -->
    <!-- actions -->
  
    <menuitem name="List" id="alan_module.menu_1_list" parent="alan_module.menu_1"
              action="alan_module.action_window"/>
    <menuitem name="Server to list" id="alan_module" parent="alan_module.menu_2"
              action="alan_module.action_server"/>
    
  </data>
</odoo>